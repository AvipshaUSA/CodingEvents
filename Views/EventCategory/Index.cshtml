@using CodingEvents.Models

<!--calling model. and this moder spelling start with lowercase m (model)-->

@model List<EventCategory>

<h1>Event Category</h1>

<p> <a asp-controller="EventCategory" asp-action="DeleteCategory">Delete Category</a> <!-- this will create a link to go to the AddEvent page--></p>
<a asp-controller="EventCategory" asp-action="Create">category Add</a>


@if (Model.Count == 0)
{
    <p>No Event Categories yet!</p>
}
else
{
    <table class="table">
        <tr>
            <th>Id
            <th>Category Name</th>
        </tr>
        @foreach (EventCategory category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
            </tr>
        }
    </table>
}